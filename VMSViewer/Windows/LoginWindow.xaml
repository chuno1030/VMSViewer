<Window x:Class="VMSViewer.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMSViewer"
        mc:Ignorable="d"
        Title="" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded" Closing="Window_Closing"
        Background="{DynamicResource BackGround_Color}">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txtID" Width="150" Height="25"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <PasswordBox x:Name="pwbPassword" Width="150" Height="25"/>
            </StackPanel>

            <Button x:Name="btnLogin" Tag="Login" Click="btnClick"/>
        </StackPanel>
    </Grid>
</Window>
